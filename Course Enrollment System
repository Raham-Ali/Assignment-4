#include <iostream>
#include <vector>
#include <string>
using namespace std;
struct Student {
    string name;
    string ID;
};
struct Course {
    string courseName;
    string courseCode;
    vector<Student> enrolledStudents;
};
int main() {
    int numCourses;
    cout << "Enter number of courses: ";
    cin >> numCourses;
    vector<Course> courses;
    for (int i = 0; i < numCourses; i++) {
        Course c;
        int numStudents;
        cout << "\nEnter details for course " << i + 1 << ":\n";
        cout << "Course Name: ";
      cin >> ws;  // clear whitespace
        getline(cin, c.courseName);
        cout << "Course Code: ";
        getline(cin, c.courseCode);
      cout << "Number of enrolled students: ";
        cin >> numStudents;
      for (int j = 0; j < numStudents; j++) {
            Student s;
cout << "Enter name of student " << j + 1 << ": ";
            cin >> ws;
           getline(cin, s.name);
            cout << "Enter ID of student " << j + 1 << ": ";
            getline(cin, s.ID);
c.enrolledStudents.push_back(s);            }
        courses.push_back(c);
    }
    cout << "----- Course Enrollment List -----"<<endl;
    for (int i = 0; i < courses.size(); i++) {
        cout << "Course " << i + 1 <endl;
        cout << "Name: " << courses[i].courseName << endl;
       cout << "Code: " << courses[i].courseCode << endl;
        cout << "Enrolled Students";
    for (Student s : courses[i].enrolledStudents) {
        cout << "  Name: " << s.name << ", ID: " << s.ID << endl;
    }
    }
return 0;
}
