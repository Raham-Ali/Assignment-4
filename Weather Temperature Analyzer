#include <iostream>
#include <iomanip>
using namespace std;
const int DAYS = 7;
const int TIMES = 4;
void inputTemperatures(float temp[DAYS][TIMES]) {
    for (int i = 0; i < DAYS; i++) {
cout << "Enter temperatures for Day " << i + 1 << ":\n";
     for (int j = 0; j < TIMES; j++) {
   cout << "  Time " << j + 1 << ": ";
            cin >> temp[i][j];
}
    }
}
void findHighLow(float temp[DAYS][TIMES], float &highest, float &lowest) {
    highest = temp[0][0];
    lowest = temp[0][0];
    for (int i = 0; i < DAYS; i++) {
        for (int j = 0; j < TIMES; j++) {
if (temp[i][j] > highest)
        highest = temp[i][j];
            if (temp[i][j] < lowest)
lowest = temp[i][j];
        }
    }
}
void calculateDailyAverages(float temp[DAYS][TIMES], float avg[DAYS]) {
    for (int i = 0; i < DAYS; i++) {
        float sum = 0;
        for (int j = 0; j < TIMES; j++) {
            sum += temp[i][j];
        }
        avg[i] = sum / TIMES;
    }
}
void displayResults(float temp[DAYS][TIMES], float avg[DAYS], float highest, float lowest) {
    cout << "Temperature Report"<<endl;
    cout << "--------------------------------------------------"<<endl;
    cout << "Day\tT1\tT2\tT3\tT4\tAverage<<endl;
    cout << "--------------------------------------------------"<<endl;
    for (int i = 0; i < DAYS; i++) {
        cout << i + 1 << "\t";
        for (int j = 0; j < TIMES; j++) {
            cout << temp[i][j] << "\t";
        }
cout << fixed << setprecision(2) << avg[i] << endl;
    }
    cout << "--------------------------------------------------"<<endl;
    cout << "Highest Temperature of the Week: " << highest << endl;
    cout << "Lowest Temperature of the Week : " << lowest << endl;
}
int main() {
    float temperatures[DAYS][TIMES];
    float dailyAverage[DAYS];
    float highest, lowest;
    inputTemperatures(temperatures);
    findHighLow(temperatures, highest, lowest);
    calculateDailyAverages(temperatures, dailyAverage);
    displayResults(temperatures, dailyAverage, highest, lowest);
    return 0;
}
